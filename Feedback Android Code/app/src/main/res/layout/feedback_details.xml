<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark"

   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"
                android:textAlignment="center"
                android:text="FEEDBACK"
                android:background="#ffffff"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_375sdp"

                android:layout_marginTop="@dimen/_32sdp"
                android:elevation="@dimen/cardview_compat_inset_shadow">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t1"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:textSize="@dimen/_11sdp"/>

                <RatingBar
                    android:id="@+id/rt1"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t2"
                    android:layout_marginTop="@dimen/_62sdp"

                    android:textSize="@dimen/_11sdp"/>
                <RatingBar
                    android:id="@+id/rt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_120sdp"
                    android:id="@+id/t3"

                    android:textSize="@dimen/_11sdp"/>
                <RatingBar
                    android:id="@+id/rt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_140sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_185sdp"
                    android:id="@+id/t4"

                    android:textSize="@dimen/_11sdp"/>
                <RatingBar
                    android:id="@+id/rt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_200sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_245sdp"
                    android:id="@+id/t5"

                    android:textSize="@dimen/_10sdp"/>
                <RatingBar
                    android:id="@+id/rt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_260sdp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_305sdp"
                    android:id="@+id/t6"

                    android:textSize="@dimen/_11sdp"
                    />
                <RatingBar
                    android:id="@+id/rt6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_320sdp"
                    />

            </android.support.v7.widget.CardView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            >




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:elevation="@dimen/cardview_compat_inset_shadow">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text=" HOW DID YOU KNOW ABOUT US?"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/source"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"

                        android:inputType="none"
                        android:background="@drawable/edittext_bg"
                        android:padding="3dp"
                        />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text=" WOULD YOU RECOMMEND US TO A FRIEND?"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/reccomend"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"

                        android:inputType="none"
                        android:background="@drawable/edittext_bg"
                        android:padding="3dp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_80sdp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text=" HOW WAS YOUR EXPERIENCE TODAY?"
                        android:textSize="@dimen/_11sdp"/>

                    <EditText
                        android:id="@+id/experience"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_height="wrap_content"

                        android:inputType="none"
                        android:background="@drawable/edittext_bg"
                        android:padding="3dp"
                        />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="@dimen/_5sdp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:padding="@dimen/_5sdp"

                android:text="CUSTOMER DETAILS"
                android:background="#ffffff"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_228sdp"
                android:layout_marginTop="@dimen/_32sdp"
                android:elevation="@dimen/cardview_compat_inset_shadow">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Name"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_16sdp"/>

                <EditText
                    android:id="@+id/et1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:hint="Enter your Name"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Email"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:textSize="@dimen/_15sdp"/>

                <EditText
                    android:id="@+id/et2"
                    android:layout_marginTop="@dimen/_35sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:hint="Enter your Email"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Mobile"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:textSize="@dimen/_15sdp"/>

                <EditText
                    android:id="@+id/et3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_65sdp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:hint="Enter your Mobile Number"
                    android:inputType="none"
                    android:padding="3dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Birthday"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:textSize="@dimen/_15sdp"/>

                <EditText
                    android:id="@+id/et4"
                    android:layout_marginTop="@dimen/_95sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_65sdp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Birthdate in DD/MM/YY"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Marital Status"
                    android:layout_marginTop="@dimen/_128sdp"
                    android:textSize="@dimen/_15sdp"/>
                <EditText
                    android:id="@+id/mar"
                    android:layout_marginTop="@dimen/_155sdp"
                    android:layout_width="@dimen/_90sdp"

                    android:layout_height="wrap_content"

                    android:inputType="textPersonName"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />


                <TextView
                    android:id="@+id/tv123"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Anniversary Date"
                    android:layout_marginLeft="@dimen/_105sdp"
                    android:layout_marginTop="@dimen/_128sdp"
                    android:textSize="@dimen/_15sdp"/>

                <EditText
                    android:visibility="invisible"
                    android:id="@+id/et5"
                    android:layout_marginTop="@dimen/_155sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Anniversary Date"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />
                <TextView


                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Bill Amount"
                    android:layout_marginTop="@dimen/_187sdp"
                    android:textSize="@dimen/_15sdp"/>

                <EditText

                    android:id="@+id/et7"
                    android:layout_marginTop="@dimen/_187sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_85sdp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Bill Amount"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />
            </android.support.v7.widget.CardView>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:padding="@dimen/_5sdp"
           >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"

                android:padding="@dimen/_5sdp"
                android:textStyle="bold"
                android:text="ANY WORDS OF ADVICE OR SUGGESTION"
                android:background="#ffffff"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                android:layout_marginTop="@dimen/_32sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Suggestion"
                    android:textSize="@dimen/_15sdp"/>

                <EditText
                    android:id="@+id/et6"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:hint="Enter your suggestion"
                    android:inputType="none"
                    android:background="@drawable/edittext_bg"
                    android:padding="3dp"
                    />

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </LinearLayout>
</ScrollView>