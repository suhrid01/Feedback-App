        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:focusable="true"
            android:focusableInTouchMode="true">




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:elevation="@dimen/cardview_compat_inset_shadow">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:text=" HOW DID YOU KNOW ABOUT US?"
                        android:textSize="@dimen/_11sdp"/>
                    <RadioGroup
                        android:id="@+id/source"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rb3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Friend"

                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/rb4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rb3"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Advertisement"

                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/rb5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social Media"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/rb4"

                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/rb6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/rb5"

                            android:textSize="@dimen/_10sdp"/>
                    </RadioGroup>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text=" WOULD YOU RECOMMEND US TO A FRIEND?"
                        android:textSize="@dimen/_11sdp"/>
                    <RadioGroup
                        android:id="@+id/reccomend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rb10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Most Likely"

                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/rb11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rb10"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_marginLeft="@dimen/_50sdp"
                            android:text="Not Likely"

                            android:textSize="@dimen/_10sdp"/>

                    </RadioGroup>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginTop="@dimen/_80sdp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text=" HOW WAS YOUR EXPERIENCE TODAY?"
                        android:textSize="@dimen/_11sdp"/>
                    <RadioGroup
                        android:id="@+id/experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rb7"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="Above   "

                            android:textSize="@dimen/_10sdp"/>
                        <RadioButton
                            android:id="@+id/rb8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rb7"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:text="At Par   "
                            android:textSize="@dimen/_10sdp"/>

                        <RadioButton
                            android:id="@+id/rb12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Below   "
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_toRightOf="@+id/rb8"

                            android:textSize="@dimen/_10sdp"/>
                    </RadioGroup>
                </RelativeLayout>

