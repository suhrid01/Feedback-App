                    android:textSize="@dimen/_11sdp" />
                <RatingBar
                    android:id="@+id/rt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_200sdp"
